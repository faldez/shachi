<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/savedFragment">

    <fragment
        android:id="@+id/savedFragment"
        android:name="com.faldez.bonito.ui.saved.SavedFragment"
        android:label="pinned_fragment"
        tools:layout="@layout/saved_fragment" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.faldez.bonito.ui.favorite.FavoriteFragment"
        android:label="favorite_fragment"
        tools:layout="@layout/favorite_fragment" />
    <fragment
        android:id="@+id/browseServerFragment"
        android:name="com.faldez.bonito.ui.browse.BrowseFragment"
        android:label="posts_fragment"
        tools:layout="@layout/browse_fragment">
        <action
            android:id="@+id/action_searchpost_to_searchsimple"
            app:destination="@id/search_simple_fragment"
            app:enterAnim="@anim/slide_in_up"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_down" />
        <action
            android:id="@+id/action_searchpost_to_postslide"
            app:destination="@id/postSlideFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
        <action
            android:id="@+id/action_searchpost_to_servers"
            app:destination="@id/serversFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
    </fragment>
    <fragment
        android:id="@+id/moreFragment"
        android:name="com.faldez.bonito.ui.more.MoreFragment"
        android:label="more_fragment"
        tools:layout="@layout/more_fragment" />
    <fragment
        android:id="@+id/postSlideFragment"
        android:name="com.faldez.bonito.ui.post_slide.PostSlideFragment"
        android:label="post_slide_fragment"
        tools:layout="@layout/post_slide_fragment">
        <action
            android:id="@+id/action_postslide_to_postdetail"
            app:destination="@id/post_detail_bottom_sheet_fragment" />
    </fragment>
    <dialog
        android:id="@+id/post_detail_bottom_sheet_fragment"
        android:name="com.faldez.bonito.ui.post_detail.PostDetailBottomSheetFragment"
        android:label="post_detail"
        tools:layout="@layout/post_detail_bottom_sheet_fragment" />
    <fragment
        android:id="@+id/serversFragment"
        android:name="com.faldez.bonito.ui.servers.ServersFragment"
        android:label="servers_fragment"
        tools:layout="@layout/servers_fragment">
        <action
            android:id="@+id/action_servers_to_serveredit"
            app:destination="@id/server_edit_fragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
    </fragment>
    <fragment
        android:id="@+id/server_edit_fragment"
        android:name="com.faldez.bonito.ui.server_edit.ServerEditFragment"
        android:label="server_edit_fragment"
        tools:layout="@layout/server_edit_fragment" />
    <fragment
        android:id="@+id/search_simple_fragment"
        android:name="com.faldez.bonito.ui.search_simple.SearchSimpleFragment"
        android:label="search_dialog"
        tools:layout="@layout/search_simple_fragment" />
</navigation>