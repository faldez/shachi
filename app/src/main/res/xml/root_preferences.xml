<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="@string/servers">
        <Preference
            app:fragment="com.faldez.shachi.ui.servers.ServersFragment"
            app:key="servers"
            app:summary="@string/manage_servers"
            app:title="@string/servers" />
        <Preference
            app:fragment="com.faldez.shachi.ui.blacklisted_tag.BlacklistedTagFragment"
            app:key="blacklisted_tags"
            app:summary="@string/blacklisted_tags"
            app:title="@string/blacklisted_tags" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/appearance">

        <ListPreference
            app:defaultValue="follow_system"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:icon="@drawable/ic_baseline_palette_24"
            app:key="theme"
            app:title="@string/theme"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>